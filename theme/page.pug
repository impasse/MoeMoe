extends _layout
include _partial/_post/tags

prepend head
    title= `${post.title} | ${site.title}`
append head
    if post.style
        link(rel='stylesheet', href=url_for(post.url, post.style))
    if post.script
        script(src=url_for(post.url, post.script))

block rightside
      #page(class=post.class)
        div.page-content
          != post.content
        include _partial/comment
