include _post/tags

mixin article(post)
    article
        h2.article__title
            a(href=post.url)= post.title
        .article__content.markdown-body!= post.excerpt
        aside.article__info
            span.article__info-date
                i.fa.fa-calendar(aria-hidden="true")
                = format_date(post.date)
            +tags(post.tags)
