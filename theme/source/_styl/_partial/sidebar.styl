#sidebar
  display flex
  position fixed
  box-sizing border-box
  height 100vh
  width 40%
  background #fff
  flex-flow column
  align-items center
  padding-top 16%
  overflow hidden
  border-right 1px solid $border-color
  &.hide
    margin-left -40%
    transition margin-left 1s
  &.show
    margin-left 0
    transition margin-left 1s
  & > div
    width auto
    text-align center
  #logo img
    width 160px
    height @width
    border-radius 100%
  .fat
    flex 1 1 auto
  #site_name
    color #464646
    margin 10px 0
    height 32px
    line-height @height
    font-size 1.6rem
    font-weight bold
    text-transform uppercase
  #site_description
    color #565654
    font-style italic
    overflow-y auto
    padding 10px 50px
  #socials > a
    margin 0 5px
  #copyright
    a
      color #A6A6A6
    color #A6A6A6
    margin-bottom 20px
    font-size 10px
    /.upyun > img
      width 40px
      height @width
