rss(version='2.0', xmlns:excerpt='http://wordpress.org/export/1.2/excerpt/', xmlns:content='http://purl.org/rss/1.0/modules/content/', xmlns:wfw='http://wellformedweb.org/CommentAPI/', xmlns:dc='http://purl.org/dc/elements/1.1/', xmlns:wp='http://wordpress.org/export/1.2/')
  channel
    title= site.title
    link= site.url
    description site.description
    pubdate= moment().toISOString()
    language zh-CN
    wp:wxr_version 1.2
    wp:base_site_url= site.url
    wp:base_blog_url= site.url
    wp:author
      wp:author_id 1
      wp:author_login
        <![CDATA[shyling]]>
      wp:author_email
        <![CDATA[i@shyling.com]]>
      wp:author_display_name
        <![CDATA[shyling]]>
      wp:author_first_name
        <![CDATA[]]>
      wp:author_last_name
        <![CDATA[]]>
    generator https://wordpress.org/?v=4.8
    each post in posts
       item
            title= post.title
            link= post.url
            pubdate= post.date.toISOString()
            description
            content:encoded
                <![CDATA[!{post.content}]]>
            excerpt:encoded
                <![CDATA[!{post.excerpt}]]>
            wp:post_date
                <![CDATA[!{post.date.format('YYYY-MM-DD hh:mm:ss')}]]>
            wp:post_date_gmt
                <![CDATA[!{post.date.format('YYYY-MM-DD hh:mm:ss')}]]>
            wp:comment_status
                <![CDATA[open]]>
            wp:ping_status
                <![CDATA[open]]>
            wp:post_name
                <![CDATA[!{post.title}]]>
            wp:status
                <![CDATA[open]]>
            wp:post_parent 0
            wp:menu_order 0
            wp:post_type
                <![CDATA[post]]>
            wp:post_password
                <![CDATA[]]>
            wp:is_sticky 0
            category(domain='category', nicename='uncategorized')
                <![CDATA[Uncategorized]]>
            each tag in post.tags
                category(domain='post_tag', nicename=tag.name)
                    <![CDATA[!{tag.name}]]>
            wp:postmeta
                wp:meta_key
                <![CDATA[_wp_desired_post_slug]]>
                wp:meta_value
                <![CDATA[!{post.s}]]>
